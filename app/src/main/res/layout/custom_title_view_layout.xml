<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.demo.customview.view.CustomTitleView
        android:id="@+id/custom_titile_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:titleText="1218"
        custom:titleTextColor="#ff0000"
        custom:titleTextSize="40sp" />

    <com.demo.customview.view.CustomImageView
        android:id="@+id/custome_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        custom:image="@drawable/zhaoyun"
        custom:imageScaleType="fillXY"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/custom_titile_view"
        custom:titleText="walker"
        custom:titleTextColor="#00ff00"
        custom:titleTextSize="20sp" />

    <com.demo.customview.view.CustomFeedTailView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        custom:layout_constraintTop_toBottomOf="@+id/custome_image_view"
        custom:leftImage="@drawable/qcircle_icon"
        custom:rightImage="@drawable/qcircle_recommend_more_icon"
        custom:titleText="来至小世界：我不抽烟的内容"
        custom:titleTextColor="#00ff00"
        custom:titleTextSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
