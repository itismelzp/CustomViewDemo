<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.demo.customview.view.CanvasForPictureView
        android:id="@+id/cfpv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="custom view"
        app:layout_constraintTop_toBottomOf="@+id/cfpv" />

    <Button
        android:id="@+id/btn_custom_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="custom shader"
        app:layout_constraintTop_toBottomOf="@id/btn_custom_view" />

    <Button
        android:id="@+id/btn_custom_sloop_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="sloop custom view learning"
        app:layout_constraintTop_toBottomOf="@id/btn_custom_drawable" />

</androidx.constraintlayout.widget.ConstraintLayout>